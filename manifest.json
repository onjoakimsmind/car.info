{
    "manifest_version": 2,
    "name": "Car.info",
    "description": "Gives you right click options for registration plates",
    "version": "1.0",
    "content_scripts": [{
        "matches": [
            "http://*/*", "https://*/*"
        ],
        "js": [
            "content.js"
        ]
    }],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png"
    },
    "permissions": [
        "contextMenus",
        "activeTab"
    ]
}